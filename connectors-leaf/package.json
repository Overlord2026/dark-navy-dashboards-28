{
  "name": "connectors-leaf",
  "version": "1.0.0",
  "description": "Connector & Evidence service for wealth management platforms",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run supabase:start\" \"npm run functions:dev\"",
    "build": "tsc && npm run api:generate",
    "test": "deno test --allow-net --allow-env tests/",
    "test:mappers": "deno test --allow-net --allow-env tests/mappers/",
    "test:integration": "jest --config jest.integration.config.js",
    "test:security": "npm audit && eslint . --ext .ts,.js",
    "lint": "eslint . --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:push": "supabase db push",
    "functions:dev": "supabase functions serve",
    "functions:deploy": "supabase functions deploy",
    "api:generate": "swagger-typescript-api -p ./api/openapi.yaml -o ./api --name client.ts",
    "db:migrate": "supabase migration up",
    "db:rollback": "supabase migration down",
    "worker:reconcile": "deno run --allow-net --allow-env workers/reconciliation-job.ts",
    "reporter:build": "cd reporter && docker build -t connector-reporter .",
    "reporter:run": "docker run -p 3001:3001 connector-reporter",
    "security:scan": "npm audit && trivy fs .",
    "deploy:staging": "npm run build && npm run functions:deploy",
    "deploy:production": "npm run test && npm run build && npm run functions:deploy",
    "docs:serve": "docsify serve docs"
  },
  "keywords": [
    "fintech",
    "connectors",
    "wealth-management",
    "supabase",
    "typescript"
  ],
  "author": "Platform Engineering Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.49.8",
    "zod": "^3.22.4",
    "openapi-types": "^12.1.3"
  },
  "peerDependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "swagger-typescript-api": "^13.0.3",
    "typescript": "^5.3.3",
    "supabase": "^1.142.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}